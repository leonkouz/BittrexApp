<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">
    <header
        android:fragment="com.example.android.apis.preference.PreferenceWithHeaders$Prefs1Fragment"
        android:title="Prefs 1"
        android:summary="An example of some preferences." />
    <header
        android:fragment="com.example.android.apis.preference.PreferenceWithHeaders$Prefs2Fragment"
        android:title="Prefs 2"
        android:summary="Some other preferences you can see.">
    <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
        <extra
            android:name="someKey"
            android:value="someHeaderValue" />
    </header>
</preference-headers>